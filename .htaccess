#=========[ start of .htaccess ]==========
#	php_value upload_max_filesize 32M
	#Options +FollowSymLinks
	RewriteEngine On
	RewriteBase /
	
	#rewrite paths to use the module folder
	RewriteRule ^/?cms/(.*)$ /modules/cms/$1 [L,R=301]
	RewriteRule ^/?geography/(.*)$ /modules/geography/$1 [L,R=301]
	RewriteRule ^/?photo/(.*)$ /modules/photo/$1 [L,R=301]
	RewriteRule ^/?jobspecialisten/(.*)$ /modules/jobspecialisten/$1 [L,R=301]
	
	RewriteCond %{REQUEST_FILENAME} !-f
	#RewriteCond %{REQUEST_FILENAME} !-d 
	RewriteRule ^(.*)$ index.php [L]
	
	# Prevent viewing of .htaccess file
	<Files .htaccess>
	order allow,deny
	deny from all
	</Files>
	
	# Prevent directory listings
#	Options All -Indexes	
	
#================[ end ]==================
